{
  "info": {
    "name": "Balatro Sticker Tracker",
    "_postman_id": "9aa4d1d0-1111-4b5a-b111-1234567890ab",
    "description": "API for Balatro Sticker Tracker (Eleventy + Netlify Functions).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET /api/jokers (alpha)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/jokers?order=alpha"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"200\", () => pm.response.to.have.status(200));",
              "const data = pm.response.json();",
              "pm.test(\"array\", () => pm.expect(Array.isArray(data)).to.be.true);",
              "pm.test(\"150 items\", () => pm.expect(data.length).to.eql(150));",
              "pm.test(\"alphabetical-ish\", () => {",
              "  const names = data.map(j => j.name);",
              "  const sorted = [...names].sort((a,b)=>a.localeCompare(b, undefined, {sensitivity:'base'}));",
              "  pm.expect(names[0]).to.eql(sorted[0]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "GET /api/jokers (game)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/jokers?order=game"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"200\", () => pm.response.to.have.status(200));",
              "const data = pm.response.json();",
              "pm.test(\"150 items\", () => pm.expect(data.length).to.eql(150));",
              "pm.test(\"order spans 1..150\", () => {",
              "  const nums = data.map(j => j.order).filter(n => Number.isFinite(n)).sort((a,b)=>a-b);",
              "  pm.expect(nums[0]).to.eql(1);",
              "  pm.expect(nums[nums.length-1]).to.eql(150);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "GET /api/stickers",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/stickers"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"200\", () => pm.response.to.have.status(200));",
              "const body = pm.response.json();",
              "pm.test(\"has checked[]\", () => pm.expect(body).to.have.property('checked'));",
              "pm.test(\"checked is array\", () => pm.expect(Array.isArray(body.checked)).to.be.true);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PATCH /api/stickers",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "content-type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"checked\": [\"8-ball\", \"joker\", \"greedy-joker\"]\n}"
        },
        "url": "{{baseUrl}}/api/stickers"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"200\", () => pm.response.to.have.status(200));",
              "const body = pm.response.json();",
              "pm.test(\"echo saved\", () => pm.expect(body.checked).to.include('8-ball'));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8888" }
  ]
}
